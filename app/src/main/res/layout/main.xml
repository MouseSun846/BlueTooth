<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3DFC2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/name_hc05"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0762BD"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/title_left_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="HC-05"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/title_right_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#ffffff" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/name_devices"
        android:layout_below="@+id/name_hc05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/connect" />

        <Button
            android:id="@+id/btn_discover"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/discoverable" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/name_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_devices"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#114499"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="@string/send"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="@string/clear"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/name_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:background="#C2F3C2">
        <RadioGroup
            android:id="@+id/stepValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center">
            <RadioButton
                android:id="@+id/val_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="20sp"
                android:textColor="#EC31CA" />
            <RadioButton
                android:id="@+id/val_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="20sp"
                android:textColor="#EC31CA"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/val_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="20sp"
                android:textColor="#EC31CA"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/val_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="20sp"
                android:textColor="#EC31CA"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/val_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textSize="20sp"
                android:textColor="#EC31CA"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/val_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="20sp"
                android:textColor="#EC31CA"
                android:layout_marginTop="10dp"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_control"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="归位"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"/>
            <Button
                android:id="@+id/button_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="标定"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"/>
            <Button
                android:id="@+id/button_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="设置"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/slideValue"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:max="2000"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>